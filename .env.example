# Perplexity API (для поиска отзывов)
# Получить: https://docs.perplexity.ai
PERPLEXITY_API_KEY=pplx-your-key-here

# Gemini API (для LLM-объяснений)
# Получить: https://ai.google.dev
GEMINI_API_KEY=your-gemini-key-here

# Альтернатива: OpenAI API
# Получить: https://platform.openai.com
OPENAI_API_KEY=sk-your-openai-key-here

# Awin Product Feed API (для загрузки товаров с affiliate ссылками)
# Получить: см. AWIN_API_SETUP.md
# ВНИМАНИЕ: Без этого ключа будут использованы demo данные
AWIN_API_KEY=your-awin-api-key-here

# Awin Advertiser IDs (ID магазинов для каждой категории)
# Найти: Awin Dashboard → My Programmes → Joined Programmes
AWIN_ADVERTISER_TOOLS=1228            # Магазин инструментов (drills)
AWIN_ADVERTISER_ELECTRONICS=5678      # Магазин электроники (headphones)
AWIN_ADVERTISER_COMPUTERS=9012        # Магазин компьютеров (laptops)
AWIN_ADVERTISER_MOBILE=3456           # Магазин телефонов (phones)
AWIN_ADVERTISER_AUTO=7890             # Магазин автозапчастей (tires)

# API Server Port
PORT=3000
